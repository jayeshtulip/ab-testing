# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===============================
# AWS Configuration
# ===============================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# S3 Buckets
S3_DATA_BUCKET=loan-default-data
S3_MODEL_BUCKET=loan-default-models
S3_ARTIFACTS_BUCKET=loan-default-artifacts

# ECR Repository
ECR_REPOSITORY_URL=123456789.dkr.ecr.us-east-1.amazonaws.com/loan-default-mlops

# ===============================
# Database Configuration
# ===============================
# PostgreSQL for monitoring and metrics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=loan_default_monitoring
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://postgres:your_postgres_password@localhost:5432/loan_default_monitoring

# ===============================
# MLflow Configuration
# ===============================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
MLFLOW_EXPERIMENT_NAME=loan_default_prediction
MLFLOW_MODEL_NAME=loan_default_classifier

# MLflow Authentication (if enabled)
MLFLOW_TRACKING_USERNAME=admin
MLFLOW_TRACKING_PASSWORD=your_mlflow_password

# ===============================
# API Configuration
# ===============================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info

# API Security
API_SECRET_KEY=your_super_secret_api_key_here_change_this_in_production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===============================
# Monitoring Configuration
# ===============================
# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090
METRICS_PORT=8001

# Grafana
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# ===============================
# Kubernetes Configuration
# ===============================
KUBE_NAMESPACE=loan-default
KUBE_CONFIG_PATH=~/.kube/config
CLUSTER_NAME=your-cluster-name

# ===============================
# CI/CD Configuration
# ===============================
# GitHub Actions (if using GitHub)
GITHUB_TOKEN=your_github_token
GITHUB_REPOSITORY=yourusername/loan-default-mlops

# Docker Registry
DOCKER_REGISTRY=your_docker_registry_url
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ===============================
# Application Configuration
# ===============================
# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# ===============================
# Data Configuration
# ===============================
# Data paths
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
FEATURES_DATA_PATH=data/features

# Model paths
MODEL_PATH=models
ARTIFACTS_PATH=artifacts

# ===============================
# Notification Configuration
# ===============================
# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
ALERT_EMAIL=alerts@yourcompany.com

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===============================
# Security and Encryption
# ===============================
# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_key_for_api_auth

# ===============================
# Performance Configuration
# ===============================
# Model serving
MODEL_CACHE_TTL=3600
BATCH_PREDICTION_MAX_SIZE=1000
REQUEST_TIMEOUT=30

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000