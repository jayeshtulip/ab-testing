name: Model Training Pipeline

on:
  schedule:
    - cron: '0 2 * * 0'  # Weekly on Sunday at 2 AM
  workflow_dispatch:      # Manual trigger
    inputs:
      retrain_reason:
        description: 'Reason for retraining'
        required: false
        default: 'Manual trigger'
        type: string

env:
  AWS_REGION: ap-south-1
  MLFLOW_TRACKING_URI: http://ab124afa4840a4f8298398f9c7fd7c7e-306571921.ap-south-1.elb.amazonaws.com
  EKS_CLUSTER_NAME: loan-eks-simple

jobs:
  train-model:
    runs-on: ubuntu-latest
    name: ðŸ¤– Train and Deploy Model
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'
        
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install mlflow pandas numpy scikit-learn joblib requests psycopg2-binary boto3 dvc
        
    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v4
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: ${{ env.AWS_REGION }}
        
    - name: Setup DVC
      run: |
        dvc remote modify myremote region ap-south-1
        dvc pull
        
    - name: Train Model
      run: |
        echo "ðŸš€ Starting MLflow tracked training..."
        python scripts/train_model_mlflow.py
        
    - name: Deploy Model
      run: |
        echo "ðŸš€ Deploying trained model..."
        python scripts/deploy_model.py