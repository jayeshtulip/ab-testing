FROM python:3.9-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY ka_requirements.txt .
RUN pip install --no-cache-dir -r ka_requirements.txt
RUN pip install fastapi uvicorn

# Copy application code
COPY src/ka_api/ ./src/ka_api/
COPY models/ ./models/
COPY metrics/ ./metrics/

# Expose port
EXPOSE 8000

# Run FastAPI application
CMD ["uvicorn", "src.ka_api.main:app", "--host", "0.0.0.0", "--port", "8000"]