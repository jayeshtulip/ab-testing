FROM python:3.9-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY ka_requirements.txt .
RUN pip install --no-cache-dir -r ka_requirements.txt
RUN pip install fastapi uvicorn

# Copy the entire source structure
COPY src/ ./src/

# IMPORTANT: Make sure the Python path includes the current directory
ENV PYTHONPATH="/app"

# Expose port
EXPOSE 8000

# Fixed CMD - correct module path
CMD ["uvicorn", "src.ka_api.main:app", "--host", "0.0.0.0", "--port", "8000"]
